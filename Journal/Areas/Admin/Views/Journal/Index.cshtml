@using Journal.DTOs;
@model List<JournalGetDto>
@{
    ViewData["Title"] = "Journals";
    int count = 1;
}
@if (Model.Count == 0)
{
    <tr> <partial>NO Category Yet</partial></tr>
                <p class="card-description">
                <a asp-action="Create" class="btn btn-success"><i class="mdi mdi-plus"></i>New</a>
            </p>
}
else
{
    <div >
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Journals</h4>
                <p class="card-description">
                    <a asp-action="Create" class="btn btn-success"><i class="mdi mdi-plus"></i>New</a>
                </p>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>№</th>
                                <th>Name</th>
                                <th>Print Date</th>
                                <th>Description</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>


                            @foreach (var journal in Model)
                            {
                                <tr>
                                    <td class="text-white">@count</td>
                                    <td class="text-white">@journal.Name</td>
                                    <td class="text-white">@journal.PrintTime</td>
                                    <td class="text-white">@journal.Description</td>

                                    <td><a asp-action="Update" asp-route-id="@journal.Id" class="submit text-light"><i class="mdi mdi-pencil"></i></a></td>

                                    <td><a asp-controller="Journal" asp-action="Delete" asp-route-id="@journal.Id" class="submit text-light"><i class="mdi mdi-delete text-danger"></i></a></td>
                                </tr>
                                count++;
                            }



                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}