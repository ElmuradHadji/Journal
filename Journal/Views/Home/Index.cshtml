@using Journal.DTOs;
@model List<JournalGetDto>
@{
    ViewData["Title"] = "Journals";
    int count = 1;
}
  @if (Model.Count == 0)
                        {
                            <tr> <partial>NO Category Yet</partial></tr>
                        }
  else
                        {
<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Journals</h4>
       
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Name</th>
                            <th>Print Date</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                      
                       
                           @foreach (var journal in Model)
                            {
                                <tr>
                                    <td class="text-white">@count</td>
                                    <td class="text-white">@journal.Name</td>
                                    <td class="text-white">@journal.PrintTime</td>
                                    <td class="text-white">@journal.Description</td>

                                   
                                </tr>
                                count++;
                            }
                        


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
}